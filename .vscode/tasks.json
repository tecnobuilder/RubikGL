{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build game",
			"command": "C:/MinGW/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-I${workspaceFolder}\\include",
				"-g",
				//C++ Source files
				"${workspaceFolder}\\source\\main.cpp",
				"${workspaceFolder}\\source\\window.cpp",
				"${workspaceFolder}\\source\\glad.c",
				"-o",
				"${workspaceFolder}\\TestGame.exe",
				"-lglfw3dll"
			],
			"options": {
				"cwd": "C:/MinGW/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:/MinGW/bin/g++.exe"
		}
	]
}